{
  "id": null,
  "title": "APM Overview (Starter)",
  "tags": ["apm", "otel"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Rate (req/sec)",
      "targets": [
        {
          "expr": "rate(http_server_duration_count[1m])",
          "legendFormat": "{{service}} {{route}}",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Latency p95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_duration_bucket[1m])) by (le))",
          "legendFormat": "p95",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Error Rate",
      "targets": [
        {
          "expr": "rate(http_server_duration_count{status=~\"5..\"}[1m])",
          "legendFormat": "errors",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "table",
      "title": "Top Endpoints by Latency",
      "targets": [
        {
          "expr": "sum(rate(http_server_duration_sum[1m])) by (service, route) / sum(rate(http_server_duration_count[1m])) by (service, route)",
          "legendFormat": "{{service}} {{route}}",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    }
  ]
}
